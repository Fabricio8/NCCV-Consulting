<%- model_class = Distrito -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cod_distrito) %></th>
      <th><%= model_class.human_attribute_name(:nom_distrito) %></th>
      <th><%= model_class.human_attribute_name(:departamento_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @distritos.each do |distrito| %>
      <tr>
        <td><%= link_to distrito.id, distrito_path(distrito) %></td>
        <td><%= distrito.cod_distrito %></td>
        <td><%= distrito.nom_distrito %></td>
        <td><%= distrito.departamento_id %></td>
        <td><%=l distrito.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_distrito_path(distrito), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      distrito_path(distrito),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_distrito_path,
            :class => 'btn btn-primary' %>
