	<style>
		html {
			font-size: 16px;
			font-family: sans-serif;
		}
	.header { 
			position: fixed;
			z-index: 999;
			top: 0;
			left: 0;
			width: 100%;
			height: 4.5rem;
			background-color: #222;
			color: #FFF;
		}
		.menu {
			background-color: #000;
			color: greenyellow;
			padding: 1rem;
			display: inline;
		}

		.menu > li {
			position: relative;
			display: inline;
			padding: 1rem;
			list-style-type: none;
			transition: all .25s ease-out;
		}

		.menu > li:hover {
			background-color: greenyellow;
			color: #000;
			cursor: pointer;
		}

		.submenu {
			position: absolute;
			top: 3rem;
			left: 1rem;
			/* display: none; */
			padding: 1rem;
			list-style-type: none;
			background-color: #000;
			color: greenyellow;
			visibility: hidden;
			transition: all 1s ease-out;
			opacity: 0;
		}


		.menu > li:hover > .submenu {
			/* display: block; */
			visibility: visible;
			opacity: 1;
		}

		.submenu > li {
			padding: 1rem;
			transition: all .25s ease-out;
		}

		.submenu > li:hover {
			background-color: greenyellow;
			color: #000;
		}
